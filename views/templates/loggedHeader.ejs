<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>
    <%= title || 'CommUnity' %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Core site styles -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/nav.css"><!-- ↓ new file -->
  <!-- Page‑specific extra <link> tags -->
  <% if (headerLinks) { headerLinks.forEach(l=> { %>
    <link rel="<%= l.rel %>" href="<%= l.href %>">
    <% }); } %>
</head>

<body>
  <!-- ===== top bar (only visible on mobile) ===== -->
  <header class="top-bar">
    <div class="brand">
      <img src="/img/Community_logo.png" alt="CommUnity logo" height="26" />
      <span>CommUnity</span>
    </div>

    <!-- “hamburger” icon -->
    <button id="menu-toggle" class="hamburger" aria-label="Toggle navigation">
      <span></span><span></span><span></span>
    </button>
  </header>

  <!-- ===== sidebar / off‑canvas nav ===== -->
  <aside id="sidebar" class="sidebar">
    <nav>
      <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/profile">My&nbsp;Profile</a></li>
        <li><a href="/community">My&nbsp;CommUnity</a></li>
        <li><a href="/events">Upcoming&nbsp;Events</a></li>
        <li><a href="/polls">Trending&nbsp;Polls</a></li>
        <li><a href="/map">Map</a></li>
        <li><a href="/issues">Report&nbsp;Issue</a></li>
        <li><a href="/notifications">&nbsp;Notifications</a></li>
        <li class="logout"><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </aside>

  <!-- dark overlay when the drawer is open (mobile only) -->
  <div id="overlay" class="overlay"></div>